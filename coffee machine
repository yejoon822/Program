//2024/10/18

#include <iostream>
#include <algorithm>
#include <vector>

using namespace std;

vector<pair<string, int>> order;
string menus = "Americano, Cafe latte, Cafe Mocha";
string menu, cupnumber;
int change=0;

void printMessage(){
  cout << "\n";
  cout << "1. Select coffee menu" << "\n";
  cout << "2. Check your order" << "\n";
  cout << "3. Pay total price" << "\n";
  cout << "4. Get change" << "\n";
  cout << "\n";
  cout << "choose: ";
}

void select_menu(){
  cout << "[Cafe Menu]" << "\n";
  cout << "Americano 1800won" << "\n";
  cout << "Cafe latte 2200won" << "\n";
  cout << "Cafe Mocha 2800won" << "\n";
  cout << "\n";
  string coffee;
  int cupnumber;
  cin.ignore();
  while(1){
    cout << "Select Menu: ";
    
    getline(cin, coffee); 
  
    if (menus.find(coffee) == -1) {
      cout << "You selected wrong menu.." << "\n";
    }
    else{
      cout << "How many cups? ";
      cin >> cupnumber;
      order.push_back({coffee, cupnumber});
      break;
    }
  }
}

void check_order(){
  for(int i=0;i<order.size();i++){
      cout << order[i].first << "\t" << order[i].second << "cups" << "\n";
  }
}

void calculate_price(){
  int price = 0;
  int paymoney=0;
  for(int i=0;i<order.size();i++){
    if(order[i].first == "Americano"){
      price += 1800 * (order[i].second);
    }else if(order[i].first == "Cafe latte"){
      price += 2200 * (order[i].second);
    }else{
      price += 2800 * (order[i].second);
    }
  }
  cout << "TotalPrice : " << price << "\n";
  while(1){
    cout << "Pay money : ";
    cin >> paymoney;
    if(price > paymoney){
      cout << "Too small.." << "\n";
    }else{1
      change = paymoney - price;
      break;
    }
  }
}

void get_change(){
  int fivethousand = 0;
  int onethousand = 0;
  int fivehundred = 0;
  int onehundred = 0;
  cout << "Your change is " << change << " won." << "\n";
  cout << "==========================" << "\n";
  fivethousand=change/5000;
  onethousand=(change%5000)/1000;
  fivehundred=((change%5000)%1000)/500;
  onehundred=(((change%5000)%1000)%500)/100;
  cout << "5000 won: " << fivethousand << "\n";
  cout << "1000 won: " << onethousand << "\n";
  cout << "500 won: " << fivehundred << "\n";
  cout << "100 won: " << onehundred << "\n";
  cout << "\n";
  cout << "Thank you for using our machine";
}

int main() {
    int i=0;
    while(1){
        printMessage();
        cin >> i;
        if(i==1){
            select_menu();
        }
        if(i==2){
            check_order();
        }
        if(i==3){
            calculate_price();
        }
        if(i==4){
            get_change();
            return 0;
        }
    }
}
