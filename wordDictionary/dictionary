#include <iostream>
#include <algorithm>
#include <vector>

using namespace std;

vector<pair<string, string>> dict;
string str, mean;

void printMessage(){
    cout << "*************************" << "\n";
    cout << "*       Dictionary      *" << "\n";
    cout << "*************************" << "\n";
    cout << "     1. Save words       " << "\n";
    cout << "     2. Delete words     " << "\n";
    cout << "     3. Print all words  " << "\n";
    cout << "     4. Search word      " << "\n";
    cout << "     5. Word Test        " << "\n";
    cout << "     6. Show Test score  " << "\n";
    cout << "     7. Exit             " << "\n";
    cout << "=========================" << "\n";
    cout << "Select >> ";
}

void savewords(){
    cout << "Enter word to save. Press 'Enter' to finish" << "\n";
    cin.ignore();
    while(1){
        cout << "Word: ";
        getline(cin, str);
        if(str.empty()){
            break;
        }
        bool exist = false;
        
        for (int i=0;i<dict.size();i++) {
            if (dict[i].first == str) {
                cout << "Already exist\n";
                exist = true;
                break;
            }
        }
        if (exist) continue;

        cout << "Mean: ";
        getline(cin, mean);
        dict.push_back({str, mean});
    }
}

void deleted(){
    cout << "Enter word to delete." << "\n";
    cin.ignore();
    while(1){
        cout << "Word: ";
        getline(cin, str);
        if(str.empty()){
            break;
        }
        for(int i=0;i<dict.size();i++){
            if(dict[i].first == str){
                dict.erase(dict.begin()+i);
                cout << "Deletion is completed" << "\n";
            }
            else{
                cout << "No such words" << "\n";
            }
        }
    }
}

void printall(){
    for(int i=0;i<dict.size();i++){
        cout << dict[i].first << "\t" << dict[i].second << "\n";
    }
}

int main() {
    int i=0;
    while(1){
        printMessage();
        cin >> i;
        if(i==1){
            savewords();
        }
        if(i==2){
            deleted();
        }
        if(i==3){
            printall();
        }
        if(i==4){
            
        }
        if(i==5){
            
        }
        if(i==6){
            
        }
        if(i==7){
            
        }
    }
    return 0;
}

