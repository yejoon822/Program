// 2024/11/15

#include <algorithm>
#include <iostream>
#include <queue>

using namespace std;
queue<string> items;

void printMessage() {
    cout << "\n";
  cout << "1. Insert item to Queue"
       << "\n";
  cout << "2. Delete item from Queue"
       << "\n";
  cout << "3. Print Queue"
       << "\n";
  cout << "4. Exit"
       << "\n";
  cout << "\n";
  cout << "Enter menu: ";
}

void insertitem(){
  cout << "# Enter item to insert: ";
  string item;
  cin >> item;
  items.push(item);
  queue<string> p = items;
  cout << "# '"<< item << "' is inserted." << "\n";
  cout << "# State of Queue: ["; 
  while(!p.empty()){
    cout << "'"<< p.front() << "'";
    p.pop();
    if(!p.empty()){
         cout << ", ";
    }
  }
  cout << "]" << "\n";
}

void deleteitem(){

if (!items.empty()) {
     cout << "# First item '" << items.front() << "' was removed." << "\n";
     items.pop();
     queue<string> q = items;
      cout << "# State of Queue: ["; 
        while(!q.empty()){
          cout << "'"<< q.front() << "'";
          q.pop();
          if(!q.empty()){
               cout << ", ";
          }
        }
        cout << "]" << "\n";
} else {
     cout << "# Nothing to delete in queue.\n";
    }
}

void printqueue(){
     queue<string> q1 = items;
      cout << "# State of Queue: ["; 
        while(!q1.empty()){
          cout << "'"<< q1.front() << "'";
          q1.pop();
          if(!q1.empty()){
               cout << ", ";
          }
        }
        cout << "]" << "\n";
}

int main() {     
  int i;
  while(1){
     printMessage();
     cin >> i;
     if(i==1){
          insertitem();
     }
     if(i==2){
          deleteitem();
     }
     if(i==3){
          printqueue();
     }
     if(i==4){
       return 0;
   }
  }
}
